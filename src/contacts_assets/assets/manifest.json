{
    "manifest_version": 2,
    "name": "demo",
    "version": "1.0.0",
    "description": "简单的Chrome扩展demo",
    "icons": {
        "16": "crab.png",
        "48": "crab.png",
        "128": "crab.png"
    },
    "background": {
        "page": "bg.html"
    },
    "browser_action": {
        "default_icon": "crab.png",
		"default_title": "这是一个示例Chrome插件",
		"default_popup": "index.html"
    },
    "options_ui": {
        "chrome_style": true
    }
}